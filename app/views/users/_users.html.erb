<% if users.any? %>
  <div class="container">
    <ul class="list-unstyled">
      <% users.each do |user| %>
        <li class="card bg-light mb-3 mx-auto" style="width: 40%">
          <div class="card-body">
            <h5 class="card-title"><%= user.name %></h5>
            <div class="row">
              <div class="col-9">
                <a href="<%= user_path(user) %>" class="card-link">投稿 <%= user.posts.count %>件</a>
                <a href="<%= followings_user_path(user) %>" class="card-link">フォロー <%= user.followings.count %>人</a>
                <a href="<%= followers_user_path(user) %>" class="card-link">フォロワー <%= user.followers.count %>人</a>
              </div>
              <div class="col-3">
                <% unless current_user == user %>
                  <%= render "relationships/follow_button",user: user %>
                <% end %>
              </div>
            </div>
          </div>
        </li>
      <% end %>
    </ul>
    <%= paginate users %>
  </div>
<% end %>