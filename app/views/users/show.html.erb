<div class="container">
  <div class="card bg-light mx-auto mb-3" style="width: 55%">
    <div class="card-body">
      <h5 class="card-title"><%= @user.name %></h5>
      <div class="row">
        <div class="col-9">
          <a href="#" class="card-link">投稿 <%= @count_posts %>件</a>
          <a href="<%= followings_user_path(@user) %>" class="card-link">フォロー <%= @count_followings %>人</a>
          <a href="<%= followers_user_path(@user) %>" class="card-link">フォロワー <%= @count_followers %>人</a>
          <a href="<%= likes_user_path(@user) %>" class="card-link">いいねした投稿 <%= @user.likes.count %>件</a>
        </div>
        <div class="col-3">
          <% unless current_user == @user.id %>
            <%= render "relationships/follow_button",user: @user %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  
  <h3 class="text-center my-3">投稿一覧</h3>
  
  <div class="row">
    <% @posts.each do |post| %>
      <div class="col-4">
        <div class="card mb-3">  
          <%= image_tag post.img.url %>
          <div class="card-body">
            <p class="card-text"><%= post.content %></p>
            <%= link_to "投稿詳細",post_path(post) %>
            <div id="favorite_buttons_<%= post.id %>">
              <%= render "favorites/favorite_button",post: post %>
            </div>  
          </div>
        </div>  
      </div>
    <% end %>  
  </div>
</div>