<div class="container">
  <div class="row mt-3">
    <% posts.each do |post| %>
      <div class="col-4">
        <div class="card mb-3">
          <div class="card-header">
            <%= post.user.name %>
          </div>
          <%= image_tag post.img.url %>
          <div class="card-body">
            <p class="card-text"><%= post.content %></p>
            <%# いいねボタン,コメント等 %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>